<div class="table-responsive">
    <table class="table">
        <tr>
            <th>path</th>
            <th>id</th>
            <th>description</th>
            <th>project_ids</th>
            <th>perf_exp_ids</th>
        </tr>
        <% @Standards.each do |s| %>
            <tr>
                <td><%= s.path %></td>
                <td><%= s.id %></td>
                <td class="text-nowrap"><%= s.description %></td>
                <td class="text-nowrap"><%= s.project_ids %></td>
                <td class="text-nowrap"><%= s.perf_exp_ids %></td>
            </tr>
        <% end %>
    </table>
</div>

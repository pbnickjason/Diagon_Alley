<p id="notice"><%= notice %></p>

<div class=".container">
    <div class="row">
        <%if defined?(@subject)%>
        <div class="col-sm-6 col-sm-offset-3">
            <h1 style="text-align: center"><%=@subject.name%></h1>
        </div>
        <div class="col-sm-3">
            <%= form_tag(projects_path, :method => "get", id: "search-form") do %>
            <%= hidden_field_tag :subject, @subject.id %>
            <%= text_field_tag :search, params[:search], placeholder: "Search Projects", :style => "color: black" %>
            <%= submit_tag "Search", :class => "btn btn-primary" %>
            <% end %>
        </div>
        <% else %>
        <div class="col-sm-6 col-sm-offset-3">
            <h1 style="text-align: center">All Projects</h1>
        </div>
        <div class="col-sm-3">
            <%= form_tag(projects_path, :method => "get", id: "search-form") do %>
              <%= text_field_tag :search, params[:search], placeholder: "Search Projects", :style => "color: black" %>
              <%= submit_tag "Search", :class => "btn btn-primary" %>
            <% end %>
            
        </div>
        <% end %>
    </div>
</div>

    <section class="no-padding" id="portfolio">
        <div class="container-fluid">
            <div class="row no-gutter popup-gallery">
        <% @projects.each do |project| %>
        <div class="row">
		<div class="col-sm-6 col-md-offset-3" style="border: 1px solid white; border-radius: 0px;">
            
                <div class="col-sm-4">
                    <img src = "/img/portfolio/thumbnails/SlayerCircuit.jpg" style="width: 100%;max-width: 400px;margin:5px;">
                </div>
                <div class="col-sm-8">
                    <h2 style="text-align: center"><%= link_to "#{project.title}", project, style: "color:snow;" %></h2> <br>
                    <p><%=project.summary%></p>
                    <h4 style="text-align: right">$<%=project.price%></h4>
                    <!--<%= link_to 'Edit', edit_project_path(project) %>-->
                    <!--<%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %>-->
                </div>
            </div>
        </div>
		<br>
        <% end %>
    </div>
</div>
</div>
<br>
<div class = "col-sm-12 col-md-offset-3">
<%= button_to 'New Project', new_project_path, :class =>'btn btn-primary', :method => :get %> </div>
</div>
